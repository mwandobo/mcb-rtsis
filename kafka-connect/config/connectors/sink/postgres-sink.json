{
  "name": "postgres-bank-sink",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "3",
    
    "connection.url": "jdbc:postgresql://${PG_HOST}:${PG_PORT}/${PG_DATABASE}",
    "connection.user": "${PG_USER}",
    "connection.password": "${PG_PASSWORD}",
    
    "topics.regex": "bank\\.db2\\..*",
    
    "insert.mode": "upsert",
    "pk.mode": "record_key",
    "pk.fields": "",
    
    "auto.create": "true",
    "auto.evolve": "true",
    
    "table.name.format": "${topic}",
    
    "transforms": "extractTopic",
    "transforms.extractTopic.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.extractTopic.regex": "bank\\.db2\\.(.*)",
    "transforms.extractTopic.replacement": "$1",
    
    "batch.size": "1000",
    "max.retries": "10",
    "retry.backoff.ms": "3000",
    
    "errors.tolerance": "none",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "errors.deadletterqueue.topic.name": "bank.dlq",
    "errors.deadletterqueue.topic.replication.factor": "3"
  }
}
