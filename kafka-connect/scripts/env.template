# Environment variables for Kafka Connect DB2 to PostgreSQL sync
# Copy this file to .env and fill in your values

# DB2 Source Connection
DB2_HOST=your-db2-host
DB2_PORT=50000
DB2_DATABASE=BANKDB
DB2_USER=db2admin
DB2_PASSWORD=your-secure-password

# PostgreSQL Target Connection
PG_HOST=your-postgres-host
PG_PORT=5432
PG_DATABASE=bankdb
PG_USER=postgres
PG_PASSWORD=your-secure-password

# Kafka Configuration
KAFKA_BOOTSTRAP=kafka1:9092,kafka2:9092,kafka3:9092
KAFKA_CONNECT_URL=http://localhost:8083

# Currency Exchange Rate (update daily)
USD_TO_TZS_RATE=2500

# Optional: Schema Registry
SCHEMA_REGISTRY_URL=http://localhost:8081
